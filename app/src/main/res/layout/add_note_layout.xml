<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_30sdp"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/headingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Title"
        android:textColor="@color/appColor"
        android:textSize="@dimen/_27sdp"
        app:layout_constraintBottom_toTopOf="@+id/addTitle"
        app:layout_constraintStart_toStartOf="@+id/addTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Title"
        android:inputType="text"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/headingDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/headingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Description"
        android:textColor="@color/appColor"
        android:textSize="@dimen/_27sdp"
        app:layout_constraintBottom_toTopOf="@+id/addDescription"
        app:layout_constraintStart_toStartOf="@+id/addDescription" />

    <EditText
        android:id="@+id/addDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Description"
        android:layout_marginBottom="@dimen/_20sdp"
        android:inputType="text"
        android:padding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/actionBtn"
        tools:layout_editor_absoluteY="209dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/actionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn"
        android:padding="@dimen/_10sdp"
        android:text="Add Note"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>